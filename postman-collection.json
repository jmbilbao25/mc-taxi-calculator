{
  "info": {
    "name": "Fare Calculator API",
    "description": "Collection for testing the Fare Calculator API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Calculate Fare - Motorcycle",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"distance\": 5.5,\n  \"vehicleType\": \"motorcycle\",\n  \"clientId\": \"test-user-1\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/calculate-fare",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calculate-fare"]
        }
      }
    },
    {
      "name": "Calculate Fare - Car",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"distance\": 3.2,\n  \"vehicleType\": \"car\",\n  \"clientId\": \"test-user-2\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/calculate-fare",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calculate-fare"]
        }
      }
    },
    {
      "name": "Calculate Fare - Long Distance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"distance\": 12,\n  \"vehicleType\": \"motorcycle\",\n  \"clientId\": \"test-user-3\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/calculate-fare",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calculate-fare"]
        }
      }
    },
    {
      "name": "Get Fare History",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/fare-history?page=1&limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "fare-history"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "Get Metrics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/metrics?period=7d",
          "host": ["{{baseUrl}}"],
          "path": ["api", "metrics"],
          "query": [
            {
              "key": "period",
              "value": "7d"
            }
          ]
        }
      }
    },
    {
      "name": "Invalid Request - Negative Distance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"distance\": -5,\n  \"vehicleType\": \"motorcycle\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/calculate-fare",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calculate-fare"]
        }
      }
    },
    {
      "name": "Invalid Request - Invalid Vehicle Type",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"distance\": 5,\n  \"vehicleType\": \"invalid\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/calculate-fare",
          "host": ["{{baseUrl}}"],
          "path": ["api", "calculate-fare"]
        }
      }
    }
  ]
}
